@model IEnumerable<HotelManagementWeb.Models.Booking>
@{
    ViewBag.Title = "UserBookings";
}
<style>

    .card {
        border-radius: 4px;
        background: #fff;
        box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
        transition: .3s transform cubic-bezier(.155,1.105,.295,1.12),.3s box-shadow,.3s -webkit-transform cubic-bezier(.155,1.105,.295,1.12);
        padding: 14px 80px 18px 36px;
        cursor: pointer;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
        }

       

        .card img {
            position: absolute;
            top: 20px;
            right: 15px;
            max-height: 120px;
        }

    .card-1 {
        background-image: url(https://image.flaticon.com/icons/png/512/488/488682.png);
        background-repeat: no-repeat;
        background-position: right;
        background-size: 80px;
    }
  
</style>

<center class="mt-20">
    <h2>@ViewBag.NoBookings</h2>
</center>



<div class="container-fluid">

    @foreach (var data in Model)
    { 
        <div class="col-md-4 col-lg-3 mt-10">
            <div class="card card-1">
               
                <h4 class="mt-2 mb-10 " style="font-weight:bold">Room Number - @data.RoomNumber </h4>
                <h5> CheckIn:  @data.BookingFrom.ToShortDateString()</h5>
                <h5>CheckOut:@data.BookingTo.ToShortDateString()</h5>
                <h5>No.Of Persons : @data.NoOfMembers</h5>
                <p style="font-weight:bold">OrderID :#@data.BookingId</p>
                <h4 class="btn bg-purple-600 text-white">Amount-Paid : @data.TotalAmount</h4>
            </div>

        </div>
    }

</div>



