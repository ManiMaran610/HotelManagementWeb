
@{
    ViewBag.Title = "SampleView";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}
<body>
    <div class=" m-0">


        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>

            </ol>
            <div class="carousel-inner">
                <div class=" item active">
                    <img src="~/Content/slider1.jpg" alt="First Slide" style="width:100%; min-height:300px;max-height:600px; ">
                    <div class="carousel-caption">
                        <p>A Best Place To Enjoy Your Life</p>

                    </div>
                </div>
                <div class=" item">
                    <img src="~/Content/slider2.jpg" alt="second slide" style="width:100%; min-height:300px;max-height:600px; ">
                    <div class="carousel-caption">
                        <p>Reserve Room for Family Vacation</p>

                    </div>
                   
                </div>

                <div class=" item">
                    <img src="~/Content/slider3.jpg" alt="Third slide" style="width:100%; min-height:300px;max-height:600px; ">
                    <div class="carousel-caption">
                        <p>Make Your Vacation Comfortable</p>
                    </div>
                   
                </div>
            </div>
            <a class="carousel-control left" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control right" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</body>